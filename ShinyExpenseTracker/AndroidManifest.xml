<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.ualberta.cs.shinyexpensetracker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />

    <application
        android:name="ca.ualberta.cs.shinyexpensetracker.framework.Application"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- This replaces Main Activity. May change in the future or for testing. -->
        <activity
            android:name="ca.ualberta.cs.shinyexpensetracker.activities.ExpenseClaimListActivity"
            android:label="@string/title_activity_expense_claims_view" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ca.ualberta.cs.shinyexpensetracker.activities.ManageTagActivity"
            android:label="@string/title_activity_manage_tag" >
        </activity>
        <activity
            android:name="ca.ualberta.cs.shinyexpensetracker.activities.ViewExpenseClaimActivity"
            android:label="@string/title_activity_view_expense_claim" >
        </activity>
        <activity
            android:name="ca.ualberta.cs.shinyexpensetracker.activities.ExpenseClaimActivity"
            android:label="@string/title_activity_add_expense_claim" >
        </activity>
        <activity
            android:name="ca.ualberta.cs.shinyexpensetracker.activities.ExpenseItemActivity"
            android:label="@string/title_activity_expense_item" >
        </activity>
        <activity
            android:name="ca.ualberta.cs.shinyexpensetracker.activities.AddDestinationActivity"
            android:label="@string/title_activity_add_destination" >
        </activity>
        <activity
            android:name="ca.ualberta.cs.shinyexpensetracker.activities.TabbedSummaryActivity"
            android:label="@string/title_activity_tabbed_summary" >
        </activity>
        <activity
            android:name="ca.ualberta.cs.shinyexpensetracker.activities.ClaimSummaryActivity"
            android:label="@string/title_activity_claim_summary" >
        </activity>
		<activity
            android:name="ca.ualberta.cs.shinyexpensetracker.activities.ExpenseItemDetailActivity"
            android:label="@string/title_activity_expense_item_detail_view" >
        </activity>
        <activity
            android:name="ca.ualberta.cs.shinyexpensetracker.activities.ReceiptViewActivity"
            android:label="@string/title_activity_receipt_view" >
        </activity>
    </application>

</manifest>
